{
  "name": "show-me-the-money",
  "version": "0.4.0",
  "description": "$how Me The Money",
  "repository": "https://github.com/dev-academy-challenges/show-me-the-money.git",
  "main": "server/index.js",
  "scripts": {
    "start": "node server",
    "dev": "run-p dev:client dev:server",
    "dev:client": "npm run webpack -- --watch",
    "dev:server": "nodemon --watch server server/index.js",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "webpack": "webpack --config ./client/webpack.config.js",
    "lint": "eslint --ext .js,.jsx .",
    "test": "jest",
    "test:watch": "jest --noStackTrace --watchAll",
    "build": "run-p build:client build:server",
    "build:client": "npm run webpack -- --mode production",
    "build:server": "npm run knex -- migrate:latest",
    "h:deploy": "git push heroku main",
    "h:migrate": "heroku run npm run knex migrate:latest",
    "h:rollback": "heroku run npm run knex migrate:rollback",
    "h:seed": "heroku run npm run knex seed:run"
  },
  "keywords": [
    "fullstack"
  ],
  "author": "EDA",
  "license": "ISC",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": "eda/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "jest": {
    "setupFiles": [
      "./tests/setup-dotenv.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "sqlite3": "^5.0.8",
    "authenticare": "^0.4.9",
    "babel-loader": "^8.2.2",
    "bulma": "^0.9.2",
    "css-loader": "^6.3.0",
    "dotenv-webpack": "^6.0.0",
    "eslint": "^8.10.0",
    "eslint-config-eda": "^1.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^27.5.1",
    "mini-css-extract-plugin": "^2.3.0",
    "sass": "^1.50.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.5",
    "react-router-dom": "^6.2.2",
    "redux": "^4.1.1",
    "redux-thunk": "^2.3.0",
    "sass-loader": "12.6.0",
    "supertest": "^6.2.2",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "knex": "^2.1.0",
    "pg": "^8.7.1",
    "superagent": "7.1.1"
  }
}
