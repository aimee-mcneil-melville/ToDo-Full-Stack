{
  "name": "lost-and-found",
  "version": "0.4.0",
  "description": "Lost and Found",
  "repository": "https://github.com/dev-academy-challenges/lost-and-found.git",
  "main": "server/index.js",
  "scripts": {
    "start": "node server",
    "dev": "run-p dev:client dev:server",
    "dev:client": "npm run webpack -- --watch",
    "dev:server": "nodemon --watch server server/index.js",
    "webpack": "webpack --config ./client/webpack.config.js",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "lint": "eslint --ext .js,.jsx .",
    "test": "jest",
    "test:watch": "jest --noStackTrace --watchAll",
    "build": "run-p build:client build:server",
    "build:client": "npm run webpack -- --mode production",
    "build:server": "npm run knex -- migrate:latest",
    "h:deploy": "git push heroku main",
    "h:migrate": "heroku run npm run knex migrate:latest",
    "h:rollback": "heroku run npm run knex migrate:rollback",
    "h:seed": "heroku run npm run knex seed:run"
  },
  "keywords": [
    "fullstack"
  ],
  "author": "EDA",
  "license": "ISC",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": "eda/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "jest": {
    "setupFiles": [
      "./tests/setup-dotenv.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.13",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-react": "^7.12.13",
    "authenticare": "^0.4.9",
    "babel-loader": "^8.2.2",
    "bulma": "^0.9.2",
    "css-loader": "^5.0.2",
    "dotenv-webpack": "^6.0.0",
    "eslint": "^8.9.0",
    "eslint-config-eda": "^1.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.7",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^6.0.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^11.0.1",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.3",
    "webpack": "^5.22.0",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.17",
    "pg": "^8.5.1",
    "prettier": "^2.5.1",
    "superagent": "^6.1.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
